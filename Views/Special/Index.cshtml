


<div class="form-horizontal">
    <div class="row">&nbsp;</div>

    @using (Html.BeginForm("Auth", "Special"))
    {
        <div class="form-group">
            <div class="col-md-4">
                <input type="text" name="password" class="form-control" placeholder="key" />
            </div>
            <input type="submit" class="btn btn-success" value="submit"/>
        </div>
    }

</div>

@section scripts{

    <script>

        $("input[name='password']").keypress(function (e) {
            if (e.which == 13) {
                $("form").submit();
                return false;
            }
        });

    </script>

}